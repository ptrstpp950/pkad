pipeline {
    agent none
    stages {
        stage('build') {
            agent { node{} }
            steps{
                sh 'ls'
                sh 'docker ps'
            }
        }
        stage('List pods') {
            agent {
                docker {
                    image 'poznajkubernetes/kubectl:v1.14'
                    args '-v /tmp:/tmp --entrypoint='
                }
            }
            steps{
                withKubeConfig(credentialsId: 'jenkins-kubeconfig', namespace: 'default') {
                    sh 'ls'
                    sh 'kubectl get pods'
                }
            }
        }
    }
}
